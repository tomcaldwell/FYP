	public boolean path(List<V> path, GraphInterface<V, E> graph){
		for(int i=0; i<path.size()-1; i++){
			int j=i+1;
			List<V> vis = new ArrayList<>(path);
			if(!graph.containsEdge(vis.get(i), vis.get(j))){
				return false;
			}
		}
		
		return true;
	}
	
