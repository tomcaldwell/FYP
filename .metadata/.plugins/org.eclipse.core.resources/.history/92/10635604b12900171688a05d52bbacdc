	@Test
	public void TestnewGraph(){
		this.decomposition = new CliqueSeparator2<String, DefaultEdge>(this.graph);
		List<String> order = new ArrayList<>();
		order.add(a);
		order.add(e);
		order.add(m);
		order.add(l);
		assertTrue(this.decomposition.getGraph(order).getVertices().size()==4);
	}
	
